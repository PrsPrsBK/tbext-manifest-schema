{
  "title": "JSON schema for Thunderbird Extension manifest file",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "manifest_version",
    "name",
    "version"
  ],
  "definitions": {
    "permissions": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "enum": []
          }
        ]
      }
    }
  },
  "properties": {
    "permissions": {
      "$ref": "#/definitions/permissions"
    }
  },
  "links": [
    {
      "href": "https://github.com/PrsPrsBK/thext-manifest-schema/blob/master/tbext.json",
      "method": "GET",
      "rel": "self"
    }
  ]
}